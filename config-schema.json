{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "botConfig": {
      "type": "object",
      "properties": {
        "botToken": {
          "type": "string"
        },
        "serverId": {
          "type": "string"
        }
      },
      "required": ["botToken", "serverId"]
    },
    "guildConfig": {
      "type": "object",
      "properties": {
        "guildRename": {
          "type": "boolean"
        },
        "guildName": {
          "type": "string"
        }
      },
      "required": ["guildRename", "guildName"]
    },
    "actionConfig": {
      "type": "object",
      "properties": {
        "deleteRoles": {
          "type": "boolean"
        },
        "deleteChannels": {
          "type": "boolean"
        },
        "createChannels": {
          "type": "boolean"
        },
        "sendMessages": {
          "type": "boolean"
        },
        "channelName": {
          "type": "string"
        },
        "sendMessage": {
          "type": "string"
        }
      },
      "required": ["deleteRoles", "deleteChannels", "createChannels", "sendMessages", "channelName", "sendMessage"]
    }
  },
  "required": ["botConfig", "guildConfig", "actionConfig"]
}